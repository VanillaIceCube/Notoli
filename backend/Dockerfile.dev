FROM continuumio/miniconda3

# Set working directory
WORKDIR /backend

# Copy environment file and install
COPY environment.yml .
RUN conda env create -f environment.yml && conda clean --all -y

# Make the env the default by adjusting PATH
ENV PATH="/opt/conda/envs/notoli_env/bin:$PATH"

# Use bash for RUN commands
SHELL ["bash", "-lc"]

# Copy your Django project code
COPY . .

# Document dev server port
EXPOSE 8000

# Run Django server
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
